        function renderTrendChart(trendsData) {
            const ctx = document.getElementById('trendCanvas').getContext('2d');
            const statusElement = document.getElementById('chartStatus');
            
            // Destroy existing chart
            if (trendChart) {
                trendChart.destroy();
